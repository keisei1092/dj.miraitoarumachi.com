<h1>イベント作成</h1>
<%= form_for(@event, :url => {:action => 'create'}) do |f| %>
  <div class="form-group">
    <label for="event_name">イベント名</label>
    <%= f.text_field :name, :class => "form-control" %>
  </div>
  <div class="form-group" style="overflow: hidden">
    <%= button_tag(class: "btn btn-primary pull-right") do %>
      <%= content_tag :span, " 作成", class: "glyphicon glyphicon-ok" %>
    <% end %>
  </div>
<% end %>
<p class="text-right">
  <%= link_to events_path, class: "black large" do %>
    <i class="glyphicon glyphicon-chevron-left"></i>
  <% end %>
</p>

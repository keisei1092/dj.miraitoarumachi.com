<h1><%= @event.name %> を編集</h1>
<%= form_for @event do |f| %>
  <div class="form-group">
    <label for="event_name">イベント名</label>
    <%= f.text_field :name, :class => 'form-control' %>
  </div>
  <div class="form-group" style="overflow: hidden">
    <%= button_tag( class: "btn btn-primary pull-right") do %>
      <%= content_tag :span, " 送信", class: "glyphicon glyphicon-ok" %>
    <% end %>
  </div>
<% end %>
<p class="text-right">
  <%= link_to event_path(@event), class: "black large" do %>
    <i class="glyphicon glyphicon-chevron-left"></i>
  <% end %>
</p>
